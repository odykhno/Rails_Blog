<% if current_user.avatar_file_name %>
    <%= image_tag current_user.avatar.url(:medium) %>
    <p>You can change avatar here</p>
    <%= form_for current_user, url: persons_profile_path, html: { multipart: true } do |f| %>
      <%= f.file_field :avatar %>
      <p><%= f.submit "Change avatar", class: "button" %></p>
      <% if flash[:message] %>
        <p class="alert alert-warning"><%= flash[:message] %></p>
      <% end %>
    <% end %>
<% elsif current_user.picture %>
    <%= image_tag current_user.picture %>
<% else %>
  <p>You can load avatar for your profile here</p>
  <%= form_for current_user, url: persons_profile_path, html: { multipart: true } do |f| %>
    <%= f.file_field :avatar %>
    <p><%= f.submit "Add avatar", class: "button" %></p>
  <% end %>
<% end %>

<h1><%= "#{user_email_or_name(current_user)} profile" %></h1>

<p><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></p>

<% unless current_user.blocked %>
  <p><%= link_to 'My Blog', controller: 'posts' %></p>
  <p><%= link_to 'All posts', get_all_posts_path %></p>
<% end %>

<% if current_user.admin %>
  <p><%= link_to 'All users', users_show_path %></p>
  <p><%= link_to 'All comments to approve', comments_show_path %></p>
<% end %>
