<% if current_user %>
  <%= render 'layouts/link' %>
<% end %>

<h1>Welcome to the Blog!</h1>

<% if current_user %>
  <p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:'btn btn-info btn-xs' %></p>
<% else %>
  <p><%= link_to 'Sign up', new_user_registration_path, class:'btn btn-info btn-xs' %></p>
  <p><%= link_to 'Log in', new_user_session_path, class:'btn btn-primary btn-xs' %></p>
  <p><%= link_to 'Log in as user Facebook', '/auth/facebook', class:'btn btn-primary btn-xs' %></p>
  <p><%= link_to 'Log in as user VKontakte', '/auth/vkontakte', class:'btn btn-primary btn-xs' %></p>
<% end %>